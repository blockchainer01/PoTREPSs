# Default server configuration
#

include   mime.types;
#default_type  application/octet-stream;

#keepalive_timeout  65;

client_max_body_size 8M;#(配置请求体缓存区大小, 不配的话) 
client_body_buffer_size 128k;#(设置客户端请求体最大值) 
fastcgi_intercept_errors on;


fastcgi_connect_timeout 3000;
fastcgi_send_timeout 3000;
fastcgi_read_timeout 3000;

upstream myfastcgi {
	       server 127.0.0.1:9000 weight=1;
	       server 127.0.0.1:9001 weight=1;#max_fails=5 fail_timeout=60s;
	       server 127.0.0.1:9002 weight=1;
	       server 127.0.0.1:9003 weight=1;
	}
server {
	listen 80;# default_server;
	#listen [::]:80;# default_server;

	# SSL configuration
	#
	listen 443 ssl;# default_server;
	#listen [::]:443 ssl;# default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	index index.html;
	server_name localhost;
	set $frontend_root '/home/pi/NetConTop/netcontop_frontend/build';
	set $backend_root '/home/pi/NetConTop/netcontop_backend/public';

	#root /var/www/html;
	root $frontend_root;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html index.php;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ /index.html;
	}

	#backend

	location ^~ /rtlab_netcon/  {
		proxy_pass http://localhost:8070/rtlab_netcon/;
		#proxy_pass http://192.168.46.134:8070/rtlab_netcon/;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";
	}
	location ^~ /api/ {
			root $backend_root;
		    	try_files $uri $uri/ /index.php?$query_string;
		}

	location ^~ /joint/ {
		    root /home/pi/NetConTop/netcontop_frontend/;
		}

	location ^~ /locales/ {
			root /home/pi/NetConTop/netcontop_frontend/;
		}

	location ^~ /CCode/ {
		    root /home/pi/NetConTop/NCSLabLink/;
		}
	
	location /matlab/compile {
			#proxy_pass http://192.168.46.134:8070/ncslablink/compile;
		proxy_pass http://localhost:8070/ncslablink/compile;
	}

	location /matlab/simulate {
		proxy_pass http://localhost:8070/ncslablink/simulate;
	}

	location /octave {
		proxy_pass http://localhost:8070/ncslablink/octave;
	}

	location  /MCode {
		root /home/pi/NetConTop/NCSLabLink/;
		#proxy_pass http://localhost:8081/result; 
	}

	location  /octavecode {
		root /home/pi/NetConTop/NCSLabLink/;
	}

	location /matlab/function {
		proxy_pass http://192.168.46.103:8081/api/task/function;
	}

	location /matlab/bode {
		proxy_pass http://192.168.46.103:8081/api/simulate/bode;
	}

	location /matlab/nyquist {
		proxy_pass http://192.168.46.103:8081/api/simulate/nyquist;
	}

	location /matlab/rlocus {
		proxy_pass http://192.168.46.103:8081/api/simulate/rlocus;
	}			

	location  /matlab/compilePi {
		proxy_pass http://192.168.46.103:8081/api/task/cmp;
	}

	location  /matlab/simulatePi {
		proxy_pass http://192.168.46.103:8081/api/task/sim;
	}

	# pass PHP scripts to FastCGI server
	#
	location ~ \.php$ {
		fastcgi_pass   myfastcgi;
		#fastcgi_pass   unix:/run/php/php7.3-fpm.sock;
	    	fastcgi_index  index.php;
	    	fastcgi_param  SCRIPT_FILENAME  $backend_root$fastcgi_script_name;
	    	include    fastcgi_params;
	    	break;
	}

	# deny access to .htaccess files, if Apache's document root
	# concurs with nginx's one
	#
	#location ~ /\.ht {
	#	deny all;
	#}
}

#server {
#	listen 8100;
#	location ^~ /CCode/ {
#		    root /home/pi/NetConTop/NCSLabLink/;
#		}
#}




